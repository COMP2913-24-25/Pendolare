FROM python:3.12-slim

WORKDIR /code

COPY ./requirements.txt /code/requirements.txt

RUN pip install --no-cache-dir --upgrade -r requirements.txt

COPY ./message_docker_env /code/message_docker_env

CMD ["fastapi", "run", "message_docker_env/src/message_service.py", "--port", "5006"]
FROM python:3.12-slim

WORKDIR /code

COPY ./codespaceRequirements.txt /code/requirements.txt

RUN pip install --no-cache-dir --upgrade -r requirements.txt

COPY ./app /code/app

CMD ["fastapi", "run", "app/src/payment_service.py", "--port", "5004"]